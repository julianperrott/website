                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="carousel-arrow carousel-arrow-prev" href="#gallery-carousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="carousel-arrow carousel-arrow-next" href="#gallery-carousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
                <!-- New comment form -->
                <div class="new-comment">
