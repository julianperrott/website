@{
    ViewBag.Title = "Contact Me";
}

<div class="wrapper">
    <div class="section-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Remove the .animated class if you don't want things to move -->
                    <h1 class="animated slideInLeft"><span>Contact me</span></h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!-- Contact me form -->
            <div class="col-sm-8">
                <h2 class="hl top-zero">Contact me</h2>
                <hr>
                <form role="form" action="@Url.Action("Send"   ,"Contact",new { area = "Home" })">
                    <div class="form-group">
                        <label for="email">Your email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="name">Your name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="message">Your message</label>
                        <textarea class="form-control" rows="3" id="message" name="message" placeholder="Enter message"></textarea>
                    </div>
                    <button type="submit" class="hl-btn hl-btn-green">Send Message</button>
                </form>
            </div>
            <!-- Right column -->
            <div class="col-sm-4">
                <!-- Out Address -->
                <h4>My Location</h4>
                <hr>
                <p>
                    Milton Keynes,<br />
                    United Kingdom,<br />
                    Email: <a href="@Url.Action("Index"   ,"Contact",new { area = "Home" })">julian_perrott@hotmail.com</a>
                </p>
                <hr>
                <!-- Google Maps -->
                <h4>Google Maps</h4>
                <hr>
                <div class="map">
                    <iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.co.uk/maps?q=milton+keynes&amp;ie=UTF8&amp;hq=&amp;hnear=Milton+Keynes,+United+Kingdom&amp;ll=52.040622,-0.759417&amp;spn=25.012287,67.631836&amp;t=m&amp;z=5&amp;output=embed&iwloc=near"></iframe>
                    <br />
                    <small>
                        <a href="https://maps.google.co.uk/maps?q=milton+keynes&amp;ie=UTF8&amp;hq=&amp;hnear=Milton+Keynes,+United+Kingdom&amp;ll=52.040622,-0.759417&amp;spn=25.012287,67.631836&amp;t=m&amp;z=5&amp;source=embed&iwloc=near" style="color:#0000FF;text-align:left">View Larger Map</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>